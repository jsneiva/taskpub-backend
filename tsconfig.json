{
  "compilerOptions": {
    "target": "es6",    
    "module": "commonjs",
    "outDir": "./build", 
    "strict": true,      
    "baseUrl": "./",     
    "paths": {
      "@config/*": ["src/config/*"],      
      "@global/*": ["src/global/*"],            
      "@helpers/*": ["src/helpers/*"],      
      "@middlewares/*": ["src/middlewares/*"],
      "@modules/*": ["src/modules/*"],            
      "@start/*": ["src/start/*"]
    },                   
    "esModuleInterop": true
  }
}
